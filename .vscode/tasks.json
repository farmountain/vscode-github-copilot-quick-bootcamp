      },
      "group": "none"
    },
    {
      "label": "Day3: Run Tests with Coverage",
      "type": "shell",
      "command": "pytest",
      "args": [
        "tests/day3/",
        "-v",
        "--cov=src.day3.credit_decisioning",
        "--cov-report=term-missing",
        "--cov-report=html:out/day3/coverage"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
