{
  "version": "2.0.0",
  "tasks": [
    // ========================================
    // Day 3 Capstone Tasks
    // ========================================
    {
      "label": "Day3: Generate Sample Applications",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "src.day3.credit_decisioning.sample_data"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": "none"
    },
    {
      "label": "Day3: Run Capstone API Server",
      "type": "shell",
      "command": "uvicorn",
      "args": [
        "src.day3.credit_decisioning.app:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8000",
        "--reload"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "group": "none"
    },
    {
      "label": "Day3: Run Capstone Tests",
      "type": "shell",
      "command": "pytest",
      "args": [
        "tests/day3/",
        "-v"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Day3: Run E2E Demo Script",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "src.day3.credit_decisioning.demo_e2e"
